@model Importaciones_SABS.Models.Productos

@{
    ViewData["Title"] = "Eliminar";
}

<div class="row pt-5">
    <div class="col-12 px-4">

        <div class="card">
            <div class="card-header bg-gradient-blue">
                <h3>¿Esta seguro que desea eliminar esta producto?</h3>
            </div>
            <div class="card-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Codigo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Codigo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NombreProducto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NombreProducto)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ValorUnitario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ValorUnitario)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Iva)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Iva)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cantidad)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FechaRegistro)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Estado == 1)
                            {
                                <button class="btn btn-success " style="cursor:text"> Disponible </button>
                            }
                            else
                            {
                                <button class="btn btn-danger " style="cursor:text"> Agotado </button>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id_categoria)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Id_categoria == 1)
                            {
                                <p> Ropa </p>
                            }
                            else if (Model.Id_categoria == 2)
                            {
                                <p> Tecnologia </p>
                            }
                            else if (Model.Id_categoria == 3)
                            {
                                <p> Juguetes </p>
                            }
                        </dd>
                    </dl>

                </div>
                <form asp-action="Eliminar" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i> Eliminar
                    </button> |
                    <a class="btn btn-secondary" asp-action="Listar"><i class="bi bi-backspace"></i> Atras</a>
                </form>
            </div>

        </div>

    </div>

</div>