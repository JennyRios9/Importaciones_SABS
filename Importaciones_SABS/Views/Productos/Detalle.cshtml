@model Importaciones_SABS.Models.Productos

@{
    ViewData["Title"] = "Detalle";
}

<div class="row pt-5">
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-header bg-gradient-blue">
                <h1>Informacion de los productos</h1>
            </div>
            <div class="card-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Codigo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Codigo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NombreProducto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NombreProducto)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ValorUnitario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ValorUnitario)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Iva)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Iva)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cantidad)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FechaRegistro)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Estado == 1)
                            {
                                <button class="btn btn-success " style="cursor:text"> Disponible </button>
                            }
                            else
                            {
                                <button class="btn btn-danger " style="cursor:text"> Agotado </button>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id_categoria)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Id_categoria == 1)
                            {
                                <p> Ropa </p>
                            }
                            else if (Model.Id_categoria == 2)
                            {
                                <p> Tecnologia </p>
                            }
                            else if (Model.Id_categoria == 3)
                            {
                                <p> Juguetes </p>
                            }
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@Model?.Id"> <i class="bi bi-pencil-fill"></i> Editar</a> |
                    <a class="btn btn-secondary" asp-action="Listar"><i class="bi bi-backspace"></i> Atras</a>
                </div>
            </div>
        </div>
    </div>
</div>


