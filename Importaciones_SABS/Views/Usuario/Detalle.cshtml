@model Importaciones_SABS.Models.Usuarios

@{
    ViewData["Title"] = "Detalle";
}

<div class="row pt-5">
    <div class="col-8 offset-2">        
        <div class="card">
            <div class="card-header bg-gradient-blue" >
                <h1>Información de usuario</h1>
            </div>
            <div class="card-body" >
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellido)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cedula)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cedula)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Correo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Correo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Estado == 1)
                            {
                                <button class="btn btn-success " style="cursor:text"> Activo </button>
                            }
                            else
                            {
                                <button class="btn btn-danger " style="cursor:text"> Inactivo </button>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.rol_id)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.rol_id == 1)
                            {
                                <p> Administrador </p>
                            }
                            else if (Model.rol_id == 2)
                            {
                                <p> Anfitrión </p>
                            }
                            else if (Model.rol_id == 3)
                            {
                                <p> Vendedor </p>
                            }
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@Model?.Id"> <i class="bi bi-pencil-fill"></i> Editar</a> |
                    <a class="btn btn-secondary" asp-action="Listar"><i class="bi bi-backspace"></i> Atras</a>
                </div>
            </div>
        </div>
    </div>
</div>



