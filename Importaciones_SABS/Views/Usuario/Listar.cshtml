@model IEnumerable<Importaciones_SABS.ClaseDto.UsuariosDto>

@{
    ViewData["Title"] = "Listar";
}

<div class="row">
    <div class="col-12 px-4">
        <h1>Gestion de Usuarios</h1>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-warning" asp-action="Registrar">Registrar</a>
            </div>
            <div class="card-body">
                <table id="usuarios" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Correo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.rol_id)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Correo)
                                </td>
                                <td>
                                    @if (item.Estado == 1)
                                    {
                                        <button class="btn btn-success " style="cursor:text"> Activo </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger " style="cursor:text"> Inactivo </button>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol)
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a> |
                                    <a class="btn btn-info" asp-action="Detalle" asp-route-id="@item.Id"><i class="bi bi-eyeglasses"></i></a> |
                                    <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

  
    <script>$(function () {
            $('#usuarios').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });</script>
}