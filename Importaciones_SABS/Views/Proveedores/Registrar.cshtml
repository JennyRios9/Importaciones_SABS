@model Importaciones_SABS.Models.Proveedores

@{
    ViewData["Title"] = "Registrar";
}

<div class="row">
    <div class="col-6 px-5">
        <h1>Registro Proveedores</h1>
        <div class="card">
            <div class="card-body">
                <form asp-action="Registrar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre_empresa" class="control-label"></label>
                        <input asp-for="Nombre_empresa" class="form-control" />
                        <span asp-validation-for="Nombre_empresa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono_empresa" class="control-label"></label>
                        <input asp-for="Telefono_empresa" class="form-control" />
                        <span asp-validation-for="Telefono_empresa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre_representante_legal" class="control-label"></label>
                        <input asp-for="Nombre_representante_legal" class="form-control" />
                        <span asp-validation-for="Nombre_representante_legal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono_representante" class="control-label"></label>
                        <input asp-for="Telefono_representante" class="form-control" />
                        <span asp-validation-for="Telefono_representante" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-cloud-plus-fill"></i> Guardar
                        </button>
                        <a class="btn btn-secondary" asp-action="Listar"><i class="bi bi-backspace"></i> Atras</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
